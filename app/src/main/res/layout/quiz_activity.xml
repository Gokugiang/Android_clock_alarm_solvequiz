<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/catimg"
    android:orientation="vertical"
    android:padding="5dp"

    tools:context=".QuizActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewTotalQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Question: 1/10"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="Score: 0"


                    android:textAlignment="center"
                    android:textColor="#D2E31111"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textCorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Correct: 0"
                    android:textAlignment="center"
                    android:textColor="#139118"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textWrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wrong: 0"
                    android:textAlignment="center"
                    android:textColor="#98630A"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/question_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="How to do that?"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <RadioGroup
                    android:id="@+id/optionsRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/option1RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_radio_background"
                        android:button="@null"
                        android:freezesText="true"
                        android:gravity="center"
                        android:padding="12sp"
                        android:text="Option 1"
                        android:textColor="#000"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/option2RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_radio_background"
                        android:button="@null"
                        android:freezesText="true"
                        android:gravity="center"
                        android:padding="12sp"
                        android:text="Option 2"
                        android:textColor="#000"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/option3RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_radio_background"
                        android:button="@null"
                        android:freezesText="true"
                        android:gravity="center"
                        android:padding="12sp"
                        android:text="Option 3"
                        android:textColor="#000"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/option4RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_radio_background"
                        android:button="@null"
                        android:freezesText="true"
                        android:gravity="center"
                        android:padding="12sp"
                        android:text="Option 4"
                        android:textColor="#000"
                        android:textSize="22sp" />

                    <!-- Thêm các RadioButton khác tương tự -->

                </RadioGroup>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:background="#A4FFA2"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
